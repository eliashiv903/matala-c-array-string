CC = gcc
FLAGS = -Wall -g

all:isort libersort txtfind libertext


libersort:libersort.a

libersort.a:Arr.o Arr.h
	ar rcs libersort.a Arr.o Arr.h

Arr.o:Arr.c Arr.h
	$(CC) $(FLAGS) -c Arr.c

main.o:main.c Arr.h
	$(CC) $(FLAGS) -c main.c	

txtfind:main.o libersort.a	
	$(CC) $(FLAGS) -o txtfind main.o libersort.a 	

libertext:libertext.a

libertext.a:Text.o Text.h
	ar rcs libertext.a Text.o Text.h

Text.o:Text.c Text.h
	$(CC) $(FLAGS) -c Text.c

main.o:main.c Text.h
	$(CC) $(FLAGS) -c main.c

isort:main.o libertext.a
	$(CC) $(FLAGS) -o isort main.o libertext.a 

.PHONY:clean all

clean:
	rm -f *.o *.a *.so isort txtfind
